<%= content_tag_for(:article, @posts) do |post| %>
  <header>
    <h1><%= post.title %> </h1>
    <p> posted by: <%= current_user.name %> </p>
  </header>
  <p>
  <%= post.content %>
  </p>
  <p>
    <%= link_to 'Edit', edit_post_path(post) %></br>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
