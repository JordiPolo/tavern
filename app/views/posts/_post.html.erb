<%= content_tag_for(:article, @posts) do |post| %>
  <header>
    <h1> <%= link_to post.title, post %> </h1>
    <p>  <%= current_user.name %> posted <%= time_ago_in_words(post.created_at) %>  ago </p>
  </header>
  <p>
  <%= post.content %>
  </p>
  <p>
    <%= link_to 'Edit', edit_post_path(post) %></br>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
