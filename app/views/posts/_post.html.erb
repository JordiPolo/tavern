<p id="notice"><%= notice %></p>
<%= content_tag_for(:article, post) do |post| %>
  <header>
    <h1> <%= link_to post.title, post %> </h1>
    <p class="align-right">  
      <%= link_to post.author.name, user_path(post.author) %> posted <%= time_ago_in_words(post.created_at) %>  ago 
    </p>
  </header>
  <p class='row post'>
    <%= post.html %>
  </p>
  <div class='row'>
    <div class='align-right'>
    <% if current_user == post.author %> 
      <%= link_to 'Edit', edit_post_path(post) %> | 
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  </div>
<% end %>
